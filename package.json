{
  "name": "focus.gaunt.dev",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run sw:local && next dev",
    "build": "next build && npm run sw:prod",
    "build:ci": "NODE_ENV=test npm run build",
    "start": "next start",
    "lint": "next lint && npm run eslint && npm run stylelint && npm run prettier -- --check",
    "lint:fix": "npm run eslint -- --fix && npm run stylelint -- --fix && npm run prettier -- --write",
    "eslint": "eslint --config './.eslintrc.json' .",
    "stylelint": "stylelint './**/*.css'",
    "prettier": "prettier './**/*.css'",
    "test": "jest --watch",
    "test:htmlcov": "jest --coverage --reports=html",
    "test:ci": "jest --coverage",
    "ci": "npm run build && npm run lint && npm run test:ci",
    "screenshots": "node ./take-screenshots.js",
    "sw:local": "(rm public/sw.js || true) && cp serviceworker/sw.local.js public/sw.js",
    "sw:prod": "(rm public/sw.js || true) && node ./serviceworker/build.js"
  },
  "dependencies": {
    "@sentry/react": "^9.0.0",
    "date-fns": "4.1.0",
    "firebase": "11.9.1",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-toastify": "^11.0.0",
    "workbox-routing": "^7.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "22.15.32",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "15.3.4",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "prettier": "^3.0.0",
    "puppeteer": "^24.0.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^38.0.0",
    "typescript": "5.8.3",
    "workbox-expiration": "^7.0.0",
    "workbox-strategies": "^7.0.0"
  }
}
