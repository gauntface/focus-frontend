{
	"name": "focus.gaunt.dev",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build && tsc",
		"build:ci": "vite build --mode=test && tsc",
		"serve": "vite preview",
		"test": "vitest run",
		"lint:ci": "npm run eslint && npm run stylelint && npm run prettier -- --check",
		"lint": "npm run eslint -- --fix && npm run stylelint -- --fix && npm run prettier -- --write",
		"eslint": "eslint --config './eslint.config.js' .",
		"stylelint": "stylelint './**/*.css'",
		"prettier": "prettier './**/*.css'",
		"ready": "npm run build && npm run lint && npm run test",
		"ci": "npm run build && npm run lint:ci && npm run test",
		"screenshots": "node ./take-screenshots.js"
	},
	"dependencies": {
		"@tanstack/react-devtools": "^0.7.0",
		"@tanstack/react-router": "^1.132.0",
		"@tanstack/react-router-devtools": "^1.132.0",
		"@tanstack/router-plugin": "^1.132.0",
		"date-fns": "^4.1.0",
		"firebase": "^12.6.0",
		"lucide-react": "^0.545.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-toastify": "^11.0.5"
	},
	"devDependencies": {
		"@tanstack/devtools-vite": "^0.3.11",
		"@tanstack/eslint-config": "^0.3.0",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/react": "^16.2.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^22.10.2",
		"@types/react": "^19.2.0",
		"@types/react-dom": "^19.2.0",
		"@vitejs/plugin-react": "^5.0.4",
		"jsdom": "^27.0.0",
		"prettier": "^3.5.3",
		"puppeteer": "^22.0.0",
		"stylelint": "^16.0.0",
		"stylelint-config-standard": "^36.0.0",
		"typescript": "^5.7.2",
		"vite": "^7.1.7",
		"vitest": "^3.0.5",
		"web-vitals": "^5.1.0"
	}
}
